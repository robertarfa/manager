 <div class="item">
            <div>Avatar URL</div>
            <div>
            <input 
                type="url" 
                name="avatar_url"
                class="text-fields"
                placeholder="http://"
                value="{{ student.avatar_url }}">
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
            <input 
                type="text"
                name="name" placeholder="Digite o nome completo"
                class="text-fields"
                value = "{{ student.name }}">
            </div>
        </div>

         <div class="item">
            <div>E-mail</div>
            <div>
            <input 
                type="email"
                name="email" placeholder="Digite seu e-mail"
                class="text-fields"
                value = "{{ student.email }}">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value = "{{ student.birth }}"
                >
            </div>
        </div>

