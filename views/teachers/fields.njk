        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="selectDegree">
                <option value=""></option>
                <option value="EMC"
                    {% if teacher.selectDegree == "EMC" %}
                            selected
                    {% endif %}
                    >Ensino Médio Completo
                </option>
                <option value="ESC"
                    {% if teacher.selectDegree == "ESC" %}
                            selected
                    {% endif %}
                    >Ensino Superior Completo
                </option>
                <option value="Master"
                    {% if teacher.selectDegree == "Master" %}
                            selected
                    {% endif %}
                    >Mestrado
                </option>
                
                <option value="Doctor" 
                    {% if teacher.selectDegree == "Doctor" %}
                            selected
                    {% endif %}
                    >Doutorado
                </option>
                </select>
            </div>
        </div>

         <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="classType" 
                        value="P"
                        {% if teacher.classType == "P" %}
                            checked
                        {% endif %}
                        >Presencial
                </span>
                 <span>
                    <input 
                        type="radio" 
                        name="classType" 
                        value="D" 
                        {% if teacher.classType == "D" %}
                            checked
                        {% endif %}
                        >À distância
                </span>
            </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="services" 
                    placeholder="Separe por vírgula"
                    value="{{ teacher.services }}">
            </div>
        </div>

        