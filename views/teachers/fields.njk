 <div class="item">
            <div>Avatar URL</div>
            <div>
            <input 
                type="url" 
                name="avatar_url"
                placeholder="http://"
                value="{{ teacher.avatar_url }}">
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
            <input 
                type="text"
                name="name" placeholder="Digite o nome completo"
                value = "{{ teacher.name }}">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value = "{{ teacher.birth }}"
                >
            </div>
        </div>

