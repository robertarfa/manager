{% extends 'layout.njk' %}

{% block content %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">

{# o method sempre será GET ou POST, ele não entende PUT, por isso será configurado no action #}
    <div  class="card">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9881186/500x500) no-repeat center center / cover"></section>
        
        <section class="details">
            
            <h3>Editar Professor</h3>

        <form method="POST" action="/teachers?_method=PUT">
        {% include 'teachers/fields.njk' %}

            <input 
                type="hidden"
                name="id"
                value={{ teacher.id }}
                >
        </form>
    
    <div class="grid-button">
        <button type="Submit">Salvar</button>
        <a href="/teachers/{{ teacher.id }}" id="cancelar" class="button">Cancelar</a>
    </div>

        </section>


    </div>



{% endblock %}