{% extends 'layout.njk' %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% block content %}

    <div class="card table-container">

        <a href="/teachers/create">Novo Cadastro</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Professores</th>
                    <th>Área de atuação</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background: url( '{{ teacher.avatar_url }}' )center top no-repeat; background-size: 100% 100%"></span>
                            {{ teacher.name }}
                        </td>
                        <td>{{ teacher.services }}</td>
                        <td><a href="/teachers/{{ teacher.id }}"> Ver</a></td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}